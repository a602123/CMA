
@{
    ViewBag.FirstMenu = "fMenuSystem";
    ViewBag.SecondMenu = "sMenuUser";
    Layout = "~/Views/_LayoutPage.cshtml";
}
@section PageLevelPluginsCss{
    <link href="/Plugins/bootstrap-table/bootstrap-table.css" rel="stylesheet" />
}

<div class="page-content">
    <!--导航-->
    @*<div class="breadcrumbs">
        <h1>角色管理</h1>
        <ol class="breadcrumb">
            <li>
                <a href="#">系统设置</a>
            </li>
            <li class="active">用户管理</li>
        </ol>
    </div>*@

    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption font-dark">
                <i class="icon-list font-dark"></i>
                <span class="caption-subject bold uppercase">角色一览</span>
            </div>
            <div class="tools"> </div>
        </div>
        <div class="clearfix">
            <button type="button" class="btn green-meadow pull-right" onclick="javascript:location.href='/Role/Add'">添加角色</button>
        </div>

        <div class="portlet-body">

            <table id="table" class="table table-striped table-bordered table-hover dt-responsive"
                   data-toggle="table"
                   data-url="/Role/GetList"
                   data-detail-formatter="detailFormatter"
                   data-click-to-select="false" data-id-field="Id"
                   data-pagination="true" data-page-size="10" data-page-list="[50,100,200]">
                <thead>
                    <tr class="active">
                        <th data-field="Name">
                            角色名
                        </th>
                        <th data-field="Description">
                            描述
                        </th>
                        <th data-field="cFree">
                            备注
                        </th>
                        <th data-formatter="operatorFormatter" data-align="center">
                            操作
                        </th>
                    </tr>
                </thead>
            </table>
         
        </div>
    </div>
</div>


@section PageLevelPluginsScript{
    <script src="/Plugins/bootstrap-table/bootstrap-table.js"></script>
    <script src="/Plugins/bootstrap-table/locale/bootstrap-table-zh-CN.js"></script>
<script src="~/JS/HelperCommon.js"></script>

}


@section PageLevelScripts{
    <script>
        function operatorFormatter(value, row) {
            return "<a title=\"编辑\" href=\"/Role/Edit/" + row.Id + "\"><i class=\"glyphicon glyphicon-edit\"></i></a>" +
                "<a title=\"删除\" href='javascript:void(0)'onclick='helper.Delete(\"/Role/Delete/\"," + row.Id + ",\"/Role/Index/\")' style=\"margin-left:15px\"><i class=\"glyphicon glyphicon-remove\"></i></a>"
        }
       
    </script>
}




